<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animation.revealanimation.RevealActivity">
   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true">
       <TextView
           android:id="@+id/content"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:background="@color/colorAccent"
           android:textAllCaps="false"
           android:gravity="center"
           android:visibility="invisible"
           android:text="reveal_animation"/>
       <View
           android:id="@+id/reveal_container"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:visibility="gone"
           android:background="@color/colorPrimary"/>
   </FrameLayout>

    <Button
        android:id="@+id/reveal_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示reveal动画"/>
    <Button
        android:layout_toRightOf="@id/reveal_animator"
        android:id="@+id/reveal_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RevealEffectActivity"/>
</RelativeLayout>